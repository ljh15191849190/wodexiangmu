@{
    Layout = "~/Views/Shared/_Index.cshtml";
}
<div id="apps" class="pt-5 pl-5 pr-5" v-cloak>
    <div class="row m-0">
        <div class="col-md-12 col-sm-12 col-lg-12 row-tit p-0 mb-5">
            <div id="T_Menu_Alias" class="col-md-4 col-sm-4 col-lg-4 p-tit">承兑汇票</div>
            <div class="col-md-8 col-sm-8 col-lg-8 p-btn pr-40">
                <erp-button v-bind:btn_cb="Export" v_id="btnExport" btn_type="btn-primary btn-rounded btn-ef btn-sm btn-ef-5 btn-ef-5b" fa_icon="glyphicon glyphicon-export">导出</erp-button>
                <erp-button v-show="btnSet" v-bind:btn_cb="Set" v_id="btnSet" btn_type="btn-primary btn-rounded btn-ef btn-sm btn-ef-5 btn-ef-5b" fa_icon="fa fa-cog">设置</erp-button>
            </div>
            <div class="tit_down"><i class="fa fa-angle-double-up"></i></div>
        </div>
        <div class="col-md-12 col-sm-12 col-lg-12 pl-5">
            <div class="tile_body searchHide clearfix">
                <form class="form-inline" id="searchForm">
                    <div id="order_1" class="form-group show-order drag_1">
                        <erp-text field_name="FA_Accept_Bill_Apply.Accept_Bill_Apply_Id" query_type="01" expression="01" v-model="FA_Accept_Bill.Accept_Bill_Apply_Id" v_id="Accept_Bill_Apply_Id">承兑汇票申请号</erp-text>
                    </div>
                    <div id="order_2" class="form-group show-order drag_1">
                        <erp-searchtext class="search" field_name="B_Employee2.Name" query_type="01" expression="01" v-model="FA_Accept_Bill.Accept_Bill_Belong_Employee_Name" v_id="Accept_Bill_Belong_Employee_Name" control_type="employee" system_key="FinancialApplication">承兑归属任务人</erp-searchtext>
                    </div>
                    <div id="order_3" class="form-group show-order drag_1">
                        <erp-searchtext class="search" field_name="B_Employee1.Name" query_type="01" expression="01" v-model="FA_Accept_Bill.Employee_Name" v_id="Employee_Name" control_type="employee" system_key="FinancialApplication">任务人</erp-searchtext>
                    </div>
                    <div id="order_4" class="form-group show-order drag_1">
                        <erp-searchtext class="search" field_name="B_Department.Department_Name" query_type="01" expression="01" v-model="FA_Accept_Bill.Department_Name" v_id="Department_Name" control_type="department" system_key="FinancialApplication">承兑归属部门</erp-searchtext>
                    </div>
                    <div id="order_5" class="form-group show-order drag_1">
                        <erp-multselect field_name="FA_Accept_Bill.Accept_Bill_Status" query_type="01" expression="04" v_id="Accept_Bill_Status" v-model="FA_Accept_Bill.Accept_Bill_Status" bind_type="StatusDictionary" system_key="FinancialApplication" dictionary_key="ACCEPT_BILL_STATUS">承兑汇票状态</erp-multselect>
                    </div>
                    <div id="order_6" class="form-group show-order drag_1">
                        <erp-text field_name="FA_Accept_Bill_Apply.Accept_Bill_Number" query_type="01" expression="01" v-model="FA_Accept_Bill.Accept_Bill_Number" v_id="Accept_Bill_Number">承兑汇票号码</erp-text>
                    </div>
                </form>
                <div class="submitSearch">
                    <span class="moreSearch">更多<i class="fa fa-angle-double-down"></i></span>
                    <erp-button v-bind:btn_cb="Search" v_id="btnSearch" fa_icon="fa fa-search" btn_type="btn-primary btn-rounded btn-ef btn-sm btn-ef-5 btn-ef-5b mb-10">查询</erp-button>
                    <erp-button v-bind:btn_cb="mClear" v_id="btnClear" fa_icon="fa fa-times" btn_type="btn-primary btn-rounded btn-ef btn-sm btn-ef-5 btn-ef-5b mb-10">清空</erp-button>
                </div>
            </div>
        </div>
        <div class="col-md-12 col-sm-12 col-lg-12 p-0">
            <erp-table showcheckbox="true" istfootshow="true" v-bind:searchmodel="searchModel" v_id="AcceptBillList" v-bind:pagetotalback="pagetotalback" v-bind:columrender="columrender" v-bind:tableurl="tableUrl" v-bind:columheaderseach="columHeaderSeach"></erp-table>
        </div>
    </div>
</div>
@Scripts.Render("~/Areas/FinancialApplication/Content/js/AcceptanceExchangeList.js?v=" + ViewData["jsVersion"])


