@{
    Layout = "~/Views/Shared/_Index.cshtml";
}
<div id="apps" class="pt-5 pl-5 pr-5" v-cloak>
    <div class="row m-0">
        <div class="col-sm-12 col-md-12 col-lg-12 row-tit p-0 mb-5">
            <div id="T_Menu_Alias" class="col-md-4 col-sm-4 col-ld-12 p-tit">进货退款申请</div>
            <div class="col-md-8 col-sm-8 col-md-8 p-btn pr-40">
                <erp-button v-show="btnEdit" v-bind:btn_cb="Edit" v_id="btnEdit" btn_type="btn-primary btn-rounded btn-ef btn-sm btn-ef-5 btn-ef-5b" fa_icon="fa fa-edit">编辑</erp-button>
                <erp-button v-show="btnSave" v-bind:btn_cb="Save" v_id="btnSave" btn_type="btn-primary btn-rounded btn-ef btn-sm btn-ef-5 btn-ef-5b" fa_icon="fa fa-save">保存</erp-button>
                <erp-button v-show="btnSubmit" v-bind:btn_cb="Submit" v_id="btnSubmit" btn_type="btn-primary btn-rounded btn-ef btn-sm btn-ef-5 btn-ef-5b" fa_icon="glyphicon glyphicon-saved">提交</erp-button>
                <erp-button v-show="btnApproval" v-bind:btn_cb="Approval" v_id="btnApproval" btn_type="btn-primary btn-rounded btn-ef btn-sm btn-ef-5 btn-ef-5b" fa_icon="glyphicon glyphicon-eye-open">审核</erp-button>
                <erp-button v-show="btnApprovalOpinion" v-bind:btn_cb="ApprovalOpinion" v_id="btnApprovalOpinion" btn_type="btn-primary btn-rounded btn-ef btn-sm btn-ef-5 btn-ef-5b" fa_icon="glyphicon glyphicon-list-alt">审批意见</erp-button>
                <erp-button v-show="btnBack" v-bind:btn_cb="Back" v_id="btnBack" btn_type="btn-primary btn-rounded btn-ef btn-sm btn-ef-5 btn-ef-5b" fa_icon="fa fa-mail-reply">返回</erp-button>
                <erp-button v-show="btnSet" v-bind:btn_cb="Set" v_id="btnSet" btn_type="btn-primary btn-rounded btn-ef btn-sm btn-ef-5 btn-ef-5b" fa_icon="fa fa-cog">设置</erp-button>
            </div>
            <div class="tit_down"><i class="fa fa-angle-double-up"></i></div>
        </div>
        <div class="col-md-12 col-sm-12 col-lg-12 p-0 tile_body">
            <div>
                <div style="position:relative;">
                    <p class="title1">基本信息</p>
                    <div class="down_tab"><i class="fa fa-angle-double-up"></i></div>
                </div>
                <form class="form-inline BasicInformation" id="searchForm_detail">
                    <div id="order_1" class="form-group show-order drag_1">
                        <erp-text isshade_bg="true" v-model="FA_Purchase_Refund_Apply.Purchase_Refund_Apply_Id" v_id="Purchase_Refund_Apply_Id">申请单号</erp-text>
                    </div>
                    <div id="order_2" class="form-group show-order drag_1">
                        <erp-select isshade_bg="true" v_id="Approval_Status" v-model="FA_Purchase_Refund_Apply.Approval_Status" bind_type="StatusDictionary" system_key="FinancialApplication" dictionary_key="APPROVAL_STATUS">审核状态</erp-select>
                    </div>
                    <div id="order_6" class="form-group show-order drag_1">
                        <erp-suppliersearch class="search" v-model="FA_Purchase_Refund_Apply.Supplier_Id" v_id="Supplier_Id" CheckEmpty="true" system_key="FinancialApplication">供应商</erp-suppliersearch>
                    </div>
                    <div id="order_8" class="form-group show-order drag_1">
                        <erp-select v_id="Refund_Method" v-model="FA_Purchase_Refund_Apply.Refund_Method" bind_type="DataDictionary" system_key="FinancialApplication" dictionary_key="PAYMENT_METHOD" v-bind:template_selection="PaymentMethod">付款方式</erp-select>
                    </div>
                    <div id="order_1" class="form-group show-order AcceptBill" style="display:none">
                        <erp-acceptbillsearch class="search" v-model="FA_Purchase_Refund_Apply.Accept_Bill_Id" v_id="Accept_Bill_Id" isselect="true" system_key="FinancialApplication" v-bind:input_field="acceptBill.inputField">承兑汇票</erp-acceptbillsearch>
                    </div>
                </form>
            </div>
            <div>
                <div style="position:relative;">
                    <p class="title1">退款信息</p>
                    <div class="down_tab"><i class="fa fa-angle-double-up"></i></div>
                </div>
                <form class="form-inline BasicInformation" id="searchForm_detail">
                    <div id="order_18" class="form-group show-order drag_1">
                        <erp-float v-model="FA_Purchase_Refund_Apply.Goods_Pay" v_id="Goods_Pay" CheckLength="14" CheckEmpty="true" decimals="2" istable="false">货款</erp-float>
                    </div>
                    <div id="order_19" class="form-group show-order drag_1">
                        <erp-float v-model="FA_Purchase_Refund_Apply.Earnest" v_id="Earnest" CheckLength="14" CheckEmpty="true" decimals="2" istable="false">定金</erp-float>
                    </div>
                    <div id="order_19" class="form-group show-order drag_1">
                        <erp-float v-model="FA_Purchase_Refund_Apply.Freight" v_id="Freight" CheckLength="14" decimals="2" istable="false">运费</erp-float>
                    </div>
                    <div id="order_19" class="form-group show-order drag_1">
                        <erp-float v-model="FA_Purchase_Refund_Apply.Other" v_id="Other" CheckLength="14" decimals="2" istable="false">其他</erp-float>
                    </div>
                    <div id="order_8" class="form-group show-order drag_1">
                        <erp-select v_id="Refund_Type" v-model="FA_Purchase_Refund_Apply.Refund_Type" bind_type="DataDictionary" system_key="FinancialApplication" dictionary_key="REFUND_TYPE">退款类型</erp-select>
                    </div>
                    <div id="order_8" class="form-group show-order drag_1">
                        <erp-switch v_id="Is_Include_Tax" v-model="FA_Purchase_Refund_Apply.Is_Include_Tax">是否含税</erp-switch>
                    </div>
                    <div id="order_1" class="form-group show-order drag_1">
                        <erp-textarea v-model="FA_Purchase_Refund_Apply.Refund_Reason" v_id="Refund_Reason">退款原因</erp-textarea>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@Scripts.Render("~/Areas/FinancialApplication/Content/js/PurchaseRefundDetail.js?v=" + ViewData["jsVersion"])

