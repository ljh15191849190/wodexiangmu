@{
    Layout = "~/Views/Shared/_Index.cshtml";
}
<div id="app" class="pt-5 pl-5 pr-5 PurchaseSupplierInfo" v-cloak>
    <div class="row m-0">
        <div class="col-md-12 col-sm-12 col-lg-12 pl-5 pr-5">
            <p class="title1">客户名称信息</p>
            <span class="down_tab"><i class="fa fa-angle-double-up"></i></span>
            <div class="BasicInformation row_Insert">
                <form class="form-inline pl-0" id="searchForm_detail">
                    <div id="order_1" class="form-group show-order drag_1">
                        <erp-text v-model="C_Customer.Customer_Name" v_id="Customer_Name" readonly="true">客户</erp-text>
                    </div>
                    <div id="order_2" class="form-group show-order drag_1">
                        <erp-customersearch is_parent="0" isshade_bg="true" class="search" v-model="C_Customer.Parent_Customer_Id" v_id="Parent_Customer_Id" system_key="CustomerRelations">父客户</erp-customersearch>
                    </div>
                    <div id="order_3" class="form-group show-order drag_1">
                        <erp-text v-model="C_Customer.Other_Customer_Name" v_id="Other_Customer_Name" readonly="true">其他抬头</erp-text>
                    </div>
                    <div id="order_4" class="form-group show-order drag_1">
                        <erp-employeesearch isshade_bg="true" class="search" v-model="C_Customer.Employee_Id" v_id="Employee_Id" system_key="CustomerRelations">任务人</erp-employeesearch>
                   </div>
                    <div id="order_5" class="form-group show-order drag_1">
                        <erp-text v-model="C_Customer.Customer_Address" v_id="Customer_Address" readonly="true">客户地址</erp-text>
                    </div>
                </form>
            </div>
        </div>
        <div class="col-md-12 col-sm-12 col-lg-12 pl-5 pr-5">
            <p class="title1">客户属性信息</p>
            <span class="down_tab"><i class="fa fa-angle-double-up"></i></span>
            <div class="BasicInformation row_Insert">
                <form class="form-inline" id="searchForm_detail">
                    <div id="order_1" class="form-group show-order drag_2">
                       <erp-search class="search" isshade_bg="true" v-model="C_Customer.Get_Way_Id" v_id="Get_Way_Id" v-bind:main_orderby="mainOrderBy" bind_type="CustomTable" table_name="B_Get_Way" system_key="CustomerRelations" v-bind:filed_seach="GetWayfiledSearch" v-bind:filed_result="GetWayresult" v-bind:input_field="GetWayinputField">获取途径</erp-search>
                     </div>
                    <div id="order_2" class="form-group show-order drag_2">
                        <erp-text v-model="C_Customer.Major_Manage_Product" v_id="Major_Manage_Product" CheckLength="200" readonly="true">主营产品</erp-text>
                    </div>
                    <div id="order_3" class="form-group show-order drag_2">
                        <erp-select v_id="Customer_Type" v-model="C_Customer.Customer_Type" isshade_bg="true" dictionary_key="CUSTOMER_TYPE" bind_type="DataDictionary">客户类型</erp-select>
                    </div>
                    <div id="order_4" class="form-group show-order drag_2">
                       <erp-search class="search" v-model="C_Customer.Industry_Id" isshade_bg="true" v_id="Industry_Id" v-bind:main_orderby="mainOrderBy" bind_type="CustomTable" table_name="B_Industry" system_key="CustomerRelations" v-bind:filed_seach="IndustryfiledSearch" v-bind:filed_result="Industryresult" v-bind:input_field="IndustryinputField" v-bind:main_where="IndustryWhere">所属行业</erp-search>
                    </div>
                    <div id="order_5" class="form-group show-order drag_2">
                        <erp-select v_id="Enterprise_Property" isshade_bg="true" v-model="C_Customer.Enterprise_Property" dictionary_key="ENTERPRISE_PROPERTY" bind_type="DataDictionary">企业性质</erp-select>
                    </div>
                    <div id="order_6" class="form-group show-order drag_2">
                        <erp-select v_id="Customer_Status" isshade_bg="true" v-model="C_Customer.Customer_Status" dictionary_key="CUSTOMER_STATUS" bind_type="DataDictionary">客户状态</erp-select>
                    </div>
                    <div id="order_7" class="form-group show-order drag_2">
                        <erp-text v_id="Customer_WebSite" v-model="C_Customer.Customer_WebSite" readonly="true">客户网址</erp-text>
                    </div>
                    <div id="order_8" class="form-group show-order drag_2">
                        <erp-text v_id="Application_Industry" v-model="C_Customer.Application_Industry" readonly="true">应用行业</erp-text>
                    </div>
                    <div id="order_9" class="form-group show-order drag_2">
                        <erp-text v_id="Old_Supplier" v-model="C_Customer.Old_Supplier" readonly="true">原供应商</erp-text>
                    </div>
                </form>
            </div>
        </div>
        @*<div class="col-md-12 col-sm-12 col-lg-12 pl-5 pr-5">
            <p class="title1">客户税务信息</p>
            <span class="down_tab"><i class="fa fa-angle-double-up"></i></span>
            <div class="BasicInformation row_Insert">
                <form class="form-inline" id="searchForm_detail">
                    <div id="order_1" class="form-group show-order drag_3">
                        <erp-text v_id="Tax_Register" v-model="C_Customer.Tax_Register" readonly="true">税务登记</erp-text>
                    </div>
                    <div id="order_2" class="form-group show-order drag_3">
                        <erp-text v_id="Business_License" v-model="C_Customer.Business_License" readonly="true">营业执照</erp-text>
                    </div>
                    <div id="order_3" class="form-group show-order drag_3">
                        <erp-text v_id="Organization_Code" v-model="C_Customer.Organization_Code" readonly="true">机构代码</erp-text>
                    </div>
                    <div id="order_4" class="form-group show-order drag_3">
                        <erp-textarea v_id="Remark" v-model="C_Customer.Remark" readonly="true">备注</erp-textarea>
                    </div>
                    <div id="order_5" class="form-group show-order drag_3">
                        <erp-textarea v_id="Base_Case" v-model="C_Customer.Base_Case" readonly="true">基本情况</erp-textarea>
                    </div>
                </form>
            </div>
        </div>*@
        <div class="col-md-12 col-sm-12 col-lg-12 pl-5 pr-5">
            <p class="title1">客户金额信息</p>
            <span class="down_tab"><i class="fa fa-angle-double-up"></i></span>
            <div class="BasicInformation row_Insert">
                <form class="form-inline" id="searchForm_detail">
                    <div id="order_1" class="form-group show-order drag_4">
                        <erp-text v_id="Goods_Pay_Sum" v-model="C_Customer.Goods_Pay_Sum" readonly="false">欠款总额</erp-text>
                    </div>
                    <div id="order_1" class="form-group show-order drag_4">
                        <erp-text v_id="Freight_Balance" v-model="C_Customer.Freight_Balance" readonly="false">运费余额</erp-text>
                    </div>
                    <div id="order_1" class="form-group show-order drag_4">
                        <erp-text v_id="Earnest_Balance" v-model="C_Customer.Earnest_Balance" readonly="true">定金余额</erp-text>
                    </div>
                    <div id="order_1" class="form-group show-order drag_4">
                        <erp-text v_id="Other" v-model="C_Customer.Other" readonly="false">其他余额</erp-text>
                    </div>
                </form>
            </div>

        </div>
        <div class="col-md-12 col-sm-12 col-lg-12 pl-5 pr-5">
            <p class="title1">合同订单情况</p>
            <span class="down_tab"><i class="fa fa-angle-double-up"></i></span>
            <div class="BasicInformation row_Insert">
                <form class="form-inline" id="searchForm_detail">
                    <div id="order_1" class="form-group show-order ContractInformation">
                        <erp-select v_id="Contract_Sign_Way" isshade_bg="true" v-model="C_Customer.Contract_Sign_Way" v-bind:template_selection="ContracWaytChange" dictionary_key="CONTRACT_SIGN_WAY" bind_type="DataDictionary">合同签订方式</erp-select>
                    </div>
                    <div id="order_2" class="form-group show-order ContractInformation OrderWay" style="display:none;">
                        <erp-select v_id="Order_Transmit_Way" isshade_bg="true" v-model="C_Customer.Order_Transmit_Way" v-bind:template_selection="OrderWayChange" dictionary_key="ORDER_TRANSMIT_WAY" bind_type="DataDictionary">订单下达方式</erp-select>
                    </div>
                    <div id="order_3" class="form-group show-order ContractInformation SystemWeb" style="display:none;">
                        <erp-text v-model="C_Customer.Platform_System_Website" readonly="false" v_id="Platform_System_Website" CheckLength="50">平台系统网址</erp-text>
                    </div>
                    <div id="order_4" class="form-group show-order ContractInformation">
                        <erp-select v_id="Contract_Version" isshade_bg="true" v-model="C_Customer.Contract_Version" dictionary_key="CONTRACT_VERSION" bind_type="DataDictionary">合同版本</erp-select>
                    </div>
                    <div id="order_5" class="form-group show-order ContractInformation clearfix">
                        <erp-select v_id="Order_Version" isshade_bg="true" v-model="C_Customer.Order_Version" dictionary_key="ORDER_VERSION" bind_type="DataDictionary">订单版本</erp-select>
                    </div>
                </form>
            </div>

        </div>
        <div class="col-md-12 col-sm-12 col-lg-12 pl-5 pr-5">
            <p class="title1">送货单情况</p>
            <span class="down_tab"><i class="fa fa-angle-double-up"></i></span>
            <div class="BasicInformation row_Insert">
                <form class="form-inline" id="searchForm_detail">
                    <div id="order_1" class="form-group show-order SendInformation">
                        <erp-select v_id="Send_Goods_Bill_Version" isshade_bg="true" v-bind:template_selection="SendOrderChange" v-model="C_Customer.Send_Goods_Bill_Version" dictionary_key="SEND_GOODS_BILL_VERSION" bind_type="DataDictionary">送货单版本</erp-select>
                    </div>
                    <div id="order_2" class="form-group show-order SendInformation SendOrder" style="display:none;">
                        <erp-select v_id="Send_Goods_Bill_Item" isshade_bg="true" v-model="C_Customer.Send_Goods_Bill_Item" dictionary_key="SEND_GOODS_BILL_ITEM" bind_type="DataDictionary">送货单项目</erp-select>
                    </div>
                    <div id="order_3" class="form-group show-order SendInformation SendOrder" style="display:none;">
                        <erp-text v-model="C_Customer.Send_Goods_Other_Content" readonly="false" v_id="Send_Goods_Other_Content" isshade_bg="true" CheckLength="100">送货其他内容</erp-text>
                    </div>
                    <div id="order_5" class="form-group show-order SendInformation">
                        <erp-select v_id="Send_Goods_Bill_Sign_Way" isshade_bg="true" v-model="C_Customer.Send_Goods_Bill_Sign_Way" dictionary_key="SEND_GOODS_BILL_ASIGN_WAY" bind_type="DataDictionary">送货单签收</erp-select>
                    </div>

                    <div id="order_4" class="form-group show-order SendInformation">
                        <erp-text v-model="C_Customer.Send_Goods_Bill_Count" readonly="false" v_id="Send_Goods_Bill_Count">送货单张数</erp-text>
                    </div>
                    <div id="order_5" class="form-group show-order SendInformation">
                        <erp-switch v_id="Is_SG_Bill_Receipt_Money" v-model="C_Customer.Is_SG_Bill_Receipt_Money" isshade_bg="true">凭《送货单》收款</erp-switch>
                    </div>
                    <div id="order_6" class="form-group show-order SendInformation">
                        <erp-text v-model="C_Customer.Is_SG_Bill_Receipt_Money" v_id="Account" isshade_bg="true">第三方签收货物</erp-text>
                    </div>

                    <div id="order_7" class="form-group show-order SendInformation">
                        <erp-text v-model="C_Customer.Is_SG_Bill_Receipt_Money" v_id="Account" isshade_bg="true">需代客发货</erp-text>
                    </div>
                </form>
            </div>

        </div>
        <div class="col-md-12 col-sm-12 col-lg-12 p-0">
            <p class="title1">三证副本</p>
            <span class="down_tab"><i class="fa fa-angle-double-down"></i></span>
            <div class="BasicInformation row_Insert">
                <erp-uploadimgs v-bind:isdelete_img="isdelete_img" v_id="uploadimgs" v-bind:file_model_list="File_Model_List"></erp-uploadimgs>
            </div>
        </div>
    </div>
</div>
@Scripts.Render("~/Areas/CustomerRelations/Content/js/CustomerSearchBasic.js?v=" + ViewData["jsVersion"])