@{
    Layout = "~/Views/Shared/_Index.cshtml";
}
<div id="app" class="pt-5 pl-5 pr-5 SupplierSearch" v-cloak>
    <div class="row m-0">
        <div class="col-md-12 col-sm-12 col-lg-12 pl-5">
            <div class="tile_body searchHide clearfix">
                <form class="form-inline" id="searchForm">
                    <div id="order_2" class="form-group show-order drag_1">
                        <erp-text field_name="B_Supplier.Supplier_Name" query_type="01" expression="01" v-model="Supplier_Name" v_id="Supplier_Name">供应商名称</erp-text>
                    </div>
                    <div id="order_2" class="form-group show-order drag_1">
                        <erp-text field_name="B_Supplier.Other_Name" query_type="01" expression="01" v-model="Other_Name" v_id="Other_Name">其他抬头</erp-text>
                    </div>
                    <div id="order_1" class="form-group show-order drag_1">
                        <erp-select ismustselect="true" field_name="B_Supplier_Payway.Payway_Way" query_type="01" expression="04" v_id="Payway_Way" v-model="Payway_Way" bind_type="DataDictionary" v-bind:system_key="searchModel.Pagination_Info.System_Key" v-bind:dictionary_key="PaywayDictionaryKey">结算方式</erp-select>
                    </div>
                </form>
                <div class="submitSearch">
                    <span class="moreSearch">更多<i class="fa fa-angle-double-down"></i></span>
                    <erp-button v-bind:btn_cb="Search" v_id="btnSearch" fa_icon="fa fa-search" btn_type="btn-primary btn-rounded btn-ef btn-sm btn-ef-5 btn-ef-5b mb-10">查询</erp-button>
                    <erp-button v-bind:btn_cb="mClear" v_id="btnClear" fa_icon="fa fa-times" btn_type="btn-primary btn-rounded btn-ef btn-sm btn-ef-5 btn-ef-5b mb-10">清空</erp-button>
                </div>
            </div>
        </div>
        <div class="col-md-12 col-sm-12 col-lg-12 p-0">
            <erp-tabletree v-bind:columrender="columrender" v-bind:pagetotalback="pagetotalback" issystem_key="true" isinfo="false" dom="true" field="B_Supplier.Parent_Supplier_Id" param="Supplier_Id" childrentable="true" showcheckbox="true" v-bind:searchmodel="searchModel" v_id="SupplierList" v-bind:tableurl="tableUrl" v-bind:childtableurl="childtableUrl" v-bind:columheaderseach="columHeaderSeach"></erp-tabletree>
        </div>
    </div>
</div>
@Scripts.Render("~/Areas/CommonView/Content/js/SupplierList.js?v=" + ViewData["jsVersion"])
