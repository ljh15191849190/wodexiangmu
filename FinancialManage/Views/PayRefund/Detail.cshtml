@{
    Layout = "~/Views/Shared/_Index.cshtml";
}

<div id="apps" class="pt-5 pl-5 pr-5" v-cloak>
    <div class="row m-0 Invoice">
        <div class="col-md-12 col-sm-12 row-tit p-0 mb-5">
            <div id="T_Menu_Alias" class="col-md-2 col-sm-2 p-tit">付款退款</div>
            <div class="col-md-10 col-sm-10 p-btn pr-40">
                <erp-button v-show="btnEdit" v-bind:btn_cb="Edit" v_id="btnEdit" btn_type="btn-primary btn-rounded btn-ef btn-sm btn-ef-5 btn-ef-5b" fa_icon="fa fa-edit">编辑</erp-button>
                <erp-button v-show="btnSave" v-bind:btn_cb="Save" v_id="btnSave" btn_type="btn-primary btn-rounded btn-ef btn-sm btn-ef-5 btn-ef-5b" fa_icon="fa fa-save">保存</erp-button>
                <erp-button v-show="btnSubmit" v-bind:btn_cb="Submit" v_id="btnSubmit" btn_type="btn-primary btn-rounded btn-ef btn-sm btn-ef-5 btn-ef-5b" fa_icon="glyphicon glyphicon-saved">提交</erp-button>
                <erp-button v-show="btnApproval" v-bind:btn_cb="mReviewed" v_id="btnReviewed" btn_type="btn-primary btn-rounded btn-ef btn-sm btn-ef-5 btn-ef-5b" fa_icon="glyphicon glyphicon-eye-open">审核</erp-button>
                <erp-button v-show="btnApprovalOpinion" v-bind:btn_cb="mApproval" v_id="btnApproval" btn_type="btn-primary btn-rounded btn-ef btn-sm btn-ef-5 btn-ef-5b" fa_icon="glyphicon glyphicon-list-alt">审批意见</erp-button>
                <erp-button v-show="btnBack" v-bind:btn_cb="Back" v_id="btnBack" btn_type="btn-primary btn-rounded btn-ef btn-sm btn-ef-5 btn-ef-5b" fa_icon="fa fa-mail-reply">返回</erp-button>
                <erp-button v-show="btnSet" v-bind:btn_cb="Set" v_id="btnSet" btn_type="btn-primary btn-rounded btn-ef btn-sm btn-ef-5 btn-ef-5b" fa_icon="fa fa-cog">设置</erp-button>
            </div>
            <div class="down_2"><i class="fa fa-angle-double-down"></i></div>
        </div>
        <div class="col-md-12 col-sm-12 pl-5 pr-5">
            <p class="title1">退款信息</p>
            <span class="down_tab"><i class="fa fa-angle-double-down"></i></span>
            <div class="BasicInformation">
                <form class="form-inline pl-0" id="searchForm_detail">
                    <div id="order_1" class="form-group show-order drag_2">
                        <erp-select v_id="Pay_Refund_Type" v-model="F_Pay_Refund.Pay_Refund_Type" bind_type="DataDictionary" system_key="FinancialManage" dictionary_key="REFUND_TYPE" v-bind:template_selection="PayRefundType">付款退款类型</erp-select>
                    </div>
                    <div id="order_1" class="form-group show-order drag_2 Bill">
                        <erp-text v-model="F_Pay_Refund.Bill_Id" v_id="Bill_Id" v-bind:readonly="readonly" readonly="true">单据编号</erp-text>
                    </div>

                    <div id="order_1" class="form-group show-order drag_2">
                        <erp-float v-model="F_Pay_Refund.Should_Return_Amount" v_id="Should_Return_Amount" CheckLength="28"  v-bind:readonly="readonly" v-bind:isshade_bg="isEdit" >应退金额</erp-float>
                    </div>
                    <div id="order_2" class="form-group show-order drag_2">
                        <erp-float v-model="F_Pay_Refund.This_Refund_Amount" v_id="This_Refund_Amount" CheckLength="28"  v-bind:readonly="readonly" v-bind:isshade_bg="isEdit">本次退款金额</erp-float>
                    </div>
                    <div id="order_2" class="form-group show-order drag_2">
                        <erp-select v_id="Return_Way" v-model="F_Pay_Refund.Return_Way" CheckEmpty="true" bind_type="DataDictionary" system_key="FinancialManage" dictionary_key="PAYMENT_METHOD" v-bind:isshade_bg="isshade_bg">退款方式</erp-select>
                    </div>
                    <div id="order_3" class="form-group show-order drag_2">
                        <erp-date v-model="F_Pay_Refund.Enter_Account_Date" v_id="Enter_Account_Date" CheckEmpty="true">入账日期</erp-date>
                    </div>
                    <div id="order_7" class="form-group show-order drag_2">
                        <erp-textarea v_id="Apply_Reason" v-model="F_Pay_Refund.Apply_Reason" CheckLength="500" v-bind:readonly="readonly">备注</erp-textarea>
                    </div>
                </form>
            </div>
        </div>
        <div class="col-md-12 col-sm-12 pl-5 pr-5">
            <p class="title1">供应商信息</p>
            <span class="down_tab"><i class="fa fa-angle-double-down"></i></span>
            <div class="BasicInformation">
                <form class="form-inline" id="searchForm_detail">
                    <div id="order_1" class="form-group show-order drag_1">
                        <erp-text CheckEmpty="true" v-model="F_Pay_Refund.Supplier_Name" v_id="Supplier_Name"   readonly="readonly" >供应商</erp-text>
                    </div>
                    <div id="order_1" class="form-group show-order drag_1">
                        <erp-text v-model="F_Pay_Refund.Bank" v_id="Bank"  readonly="readonly">开户银行</erp-text>
                    </div>
                    <div id="order_1" class="form-group show-order drag_1">
                        <erp-text v-model="F_Pay_Refund.Bank_Account" v_id="Bank_Account" readonly="readonly">银行账号</erp-text>
                    </div>
                    <div id="order_1" class="form-group show-order drag_1">
                        <erp-text v-model="F_Pay_Refund.Supplier_Tax_Number" v_id="Supplier_Tax_Number"  readonly="readonly">税号</erp-text>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>
@Scripts.Render("~/Areas/FinancialManage/Content/js/PayRefundDetail.js?v=" + ViewData["jsVersion"])
