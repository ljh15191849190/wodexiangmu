                    <div id="order_2" class="form-group show-order">
                        <erp-select v_id="Refund_Type" field_name="FA_Sale_Refund_Apply.Refund_Type" query_type="01" expression="02" v-model="Refund_Type" bind_type="DataDictionary" system_key="FinancialManage" dictionary_key="REFUND_TYPE">退款类型</erp-select>
