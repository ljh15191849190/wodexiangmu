                    <div id="order_9" class="form-group show-order">
                        <erp-searchtext class="search" field_name="FA_Sale_Refund_Apply.Department_Id" query_type="01" expression="02" v-model="Department_Id" v_id="Department_Id" control_type="department" system_key="FinancialManage">任务人部门</erp-searchtext>
