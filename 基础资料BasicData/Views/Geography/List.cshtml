@{
    Layout = "~/Views/Shared/_Index.cshtml";
}

<div id="apps" class="pt-5 pl-5 pr-5" v-cloak>
    <div class="row m-0">
        <div class="col-md-12 col-sm-12 col-lg-12 row-tit p-0 mb-5">
            <div id="T_Menu_Alias" class="col-md-2 col-sm-2 col-lg-2 p-tit">地理关系列表 </div>
            <div class="col-md-10 col-sm-10 col-lg-10 p-btn pr-40">
                <erp-button v-bind:btn_cb="New" v_id="btnNew" btn_opt="新增" btn_type="btn-primary btn-rounded btn-ef btn-sm btn-ef-5 btn-ef-5b" fa_icon="fa fa-plus">新增</erp-button>
                <erp-button v-bind:btn_cb="Update" v_id="btnUpdate" btn_opt="修改" btn_type="btn-primary btn-rounded btn-ef btn-sm btn-ef-5 btn-ef-5b" fa_icon="fa fa-edit">修改</erp-button>
                <erp-button v-bind:btn_cb="Delete" v_id="btnDelete" btn_opt="作废" btn_type="btn-primary btn-rounded btn-ef btn-sm btn-ef-5 btn-ef-5b" fa_icon="fa fa-trash">作废</erp-button>
                <erp-button v-bind:btn_cb="Set" v_id="btnSet" btn_opt="设置" btn_type="btn-primary btn-rounded btn-ef btn-sm btn-ef-5 btn-ef-5b" fa_icon="fa fa-cog">设置</erp-button>
            </div>
            <div class="tit_down"><i class="fa fa-angle-double-up"></i></div>
        </div>
        <div class="col-md-12 col-sm-12 col-lg-12 pl-5">
            <div class="tile_body searchHide clearfix">
                <form class="form-inline" id="searchForm">
                    <div id="order_1" class="form-group show-order">
                        <erp-text v_id="Geography_Name" v-model="Geography_Name"  field_name="B_Geography.Geography_Name" query_type="01" expression="01">地理名称</erp-text>
                    </div>
                    <div id="order_2" class="form-group show-order">
                        <erp-text v_id="Geography_Short_Name" field_name="B_Geography.Geography_Short_Name" query_type="01" expression="02" v-model="Geography_Short_Name">地理简称</erp-text>
                    </div>
                    <div id="order_3" class="form-group show-order">
                        <erp-text v_id="Search_First_Alphabet" field_name="B_Geography.Search_First_Alphabet" query_type="01" expression="02" v-model="Search_First_Alphabet">地理首字母</erp-text>
                    </div>
                    <div id="order_4" class="form-group show-order">
                        <erp-text v_id="Search_Full_Spell" field_name="B_Geography.Search_Full_Spell" query_type="01" expression="02" v-model="Search_Full_Spell">地理全拼</erp-text>
                    </div>
                    <div id="order_5" class="form-group show-order">
                        <erp-datedb field_name="B_Geography.Create_Time" v_id="Create_Time" v-model="Create_Time" query_type="01" expression="05">创建时间</erp-datedb>
                    </div>
                </form>
                <div class="submitSearch">
                    <span class="moreSearch">更多<i class="fa fa-angle-double-down"></i></span>
                    <erp-button v-bind:btn_cb="Search" v_id="btnSearch" fa_icon="fa fa-search" btn_type="btn-primary btn-rounded btn-ef btn-sm btn-ef-5 btn-ef-5b mb-10">查询</erp-button>
                    <erp-button v-bind:btn_cb="Clear" v_id="btnClear" fa_icon="fa fa-times" btn_type="btn-primary btn-rounded btn-ef btn-sm btn-ef-5 btn-ef-5b mb-10">清空</erp-button>
                </div>
            </div>
        </div>
        <div class="col-md-12 col-sm-12 col-lg-12 p-0">
            <erp-tabletree field="B_Geography.Parent_Geography_Id" param="Geography_Id" childrentable="true" isinfo="false" ispageskip="none" blengthchange="false" showcheckbox="true" v-bind:searchmodel="searchModel" v_id="GeographyList" v-bind:tableurl="tableUrl" v-bind:columheaderseach="columHeaderSeach"></erp-tabletree>
        </div>
    </div>
</div>
@Scripts.Render("~/Areas/BasicData/Content/js/GeographyList.js?v=" + ViewData["jsVersion"])
